extends ../layout

block content
    .container
        .well #{q === 'actilive' ? "测试环境" : "生产环境"}
        div(class="alert alert-info")
            span(style="font-weight: 900;") 说明： 
            span 如果无法加载出资源，请确定您的平台id和密钥以及房间是否开通正确
        div(style="margin-bottom: 20px;")
            a(class="btn btn-danger" href="/platform_switch?platformId=#{platformId}&secret=#{secret}&platformUserId=#{platformUserId}&q=#{q}&force=1") 返回
        #flashcontent
        div(style="margin: 50px 0")
        #manage_page
    script(src="#{cdnJS ? cdnJS : '' }",type="text/javascript")

    script(src="/js/detail/play/swfobject.js",type="text/javascript")
    script.
        new ActiLive({
            appRootId: 'manage_page',
            platformId: '#{platformId}',
            token: '#{token}'
        })

        $("#flashcontent").height(($("#flashcontent").width()) * 9 / 16);  
        (function() {
            var params = {
                quality: "high",
                scale: "noscale",
                wmode: "window",
                allowscriptaccess: "always",
                allowFullScreen:"true",
                bgcolor: "#FFFFFF"
            };
      
            var attributes = {
                id: "flashcontent",
                name: "flashcontent"
            };
      
            var flashvars = {
                playFormat:2,
                mode:"RTMP",
                showControls:1,
                path:"#{flashUI}",  //�����Ǹ���·����player_ui.swf
                volume:1
            };
      
            if ('#{token}') {
                flashvars.token = '#{token}'
            }
            if ('#{platformUserId}') {
                flashvars.platformUserId = '#{platformUserId}'
            }
            if ('#{platformId}') {
                flashvars.platformId = '#{platformId}'
            }
      
            swfobject.embedSWF("#{flashApi}?a="+Math.random(), "flashcontent", "820", "504", "10.0.0", "expressInstall.swf", flashvars, params, attributes);
        })()